@model Food
<h2>Delete Food</h2>
<form asp-controller="Food" asp-action="RemoveFood" method="post">
	<input type="hidden" asp-for="@Model.FoodId" />
	<div class="mt-3">
		<label class="form-label">Food Name</label>
		<input type="text" class="form-control" id="foodName" asp-for="@Model.FoodName" readonly/>
	</div>

	<div class="mt-3">
		<label class="form-label">Food Price</label>
		<input type="text" class="form-control" id="foodPrice" asp-for="@Model.FoodPrice" readonly />
	</div>

	<div class="mt-3">
		<label class="form-label">Food Category</label>
		<input type="text" class="form-control" id="foodCategory" asp-for="@Model.FoodCategoryId" readonly />
	</div>

	<div class="mt-3">
		<button type="submit" class="btn btn-primary">Delete</button>
		<button type="submit" class="btn btn-primary" asp-controller="Food" asp-action="FoodListing">Back</button>
	</div>

</form>